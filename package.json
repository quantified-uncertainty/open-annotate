{
  "name": "roast-my-post",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "eslint . --config ./config/eslint/.eslintrc.json",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest --config ./config/jest/jest.config.cjs",
    "test:unit": "jest --config ./config/jest/jest.config.cjs --testPathIgnorePatterns='\\.(integration|e2e|llm)\\.test\\.'",
    "test:integration": "jest --config ./config/jest/jest.config.cjs --testMatch='**/*.integration.test.ts'",
    "test:e2e": "jest --config ./config/jest/jest.config.cjs --testMatch='**/*.e2e.test.ts'",
    "test:llm": "jest --config ./config/jest/jest.config.cjs --testMatch='**/*.llm.test.ts'",
    "test:fast": "npm run test:unit && npm run test:integration",
    "test:without-llms": "jest --config ./config/jest/jest.config.cjs --testPathIgnorePatterns='\\.llm\\.test\\.'",
    "test:without-external": "jest --config ./config/jest/jest.config.cjs --testPathIgnorePatterns='\\.(e2e|llm)\\.test\\.'",
    "test:ci": "npm run test:without-external",
    "test:quiet": "jest --config ./config/jest/jest.config.cjs --silent",
    "test:ci:quiet": "npm run test:without-external -- --silent",
    "db:push": "./scripts/safe-prisma.sh db push",
    "db:migrate": "./scripts/safe-prisma.sh migrate dev",
    "db:migrate:reset": "./scripts/safe-prisma.sh migrate reset",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "process-jobs": "tsx src/scripts/process-job.ts",
    "process-jobs-adaptive": "tsx src/scripts/process-jobs-adaptive.ts",
    "cleanup-stale-jobs": "tsx src/scripts/cleanup-stale-jobs.ts",
    "test-helicone-sessions": "tsx src/scripts/test-helicone-sessions.ts",
    "helicone-cost-report": "tsx src/scripts/helicone-cost-report.ts",
    "worktree:create": "./scripts/worktree-manager.sh create",
    "worktree:start": "./scripts/worktree-manager.sh start",
    "worktree:list": "./scripts/worktree-manager.sh list",
    "worktree:ports": "./scripts/worktree-manager.sh ports",
    "worktree": "./scripts/worktree-manager.sh",
    "migrations:status": "node scripts/show-migrations.js",
    "check": "npx prisma generate && npm run typecheck && npm run lint",
    "precommit": "npm run check && npm run test:ci"
  },
  "dependencies": {
