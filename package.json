{
  "name": "roast-my-post",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @roast/web dev",
    "build": "turbo run build",
    "start": "pnpm --filter @roast/web start",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:llm": "turbo run test:llm",
    "test:fast": "npm run test:unit && npm run test:integration",
    "test:without-llms": "turbo run test:without-llms",
    "test:without-external": "turbo run test:without-external",
    "test:ci": "turbo run test:ci",
    "test:quiet": "turbo run test:quiet",
    "test:ci:quiet": "turbo run test:ci:quiet",
    "db:push": "pnpm --filter @roast/db db:push",
    "db:migrate": "pnpm --filter @roast/db db:migrate",
    "db:migrate:reset": "cd internal-packages/db && ../../tools/scripts/safe-prisma.sh migrate reset",
    "db:deploy": "pnpm --filter @roast/db exec prisma migrate deploy",
    "db:studio": "pnpm --filter @roast/db db:studio",
    "process-jobs": "tsx apps/web/src/scripts/process-job.ts",
    "process-jobs-adaptive": "tsx apps/web/src/scripts/process-jobs-adaptive.ts",
    "cleanup-stale-jobs": "tsx apps/web/src/scripts/cleanup-stale-jobs.ts",
    "test-helicone-sessions": "tsx apps/web/src/scripts/test-helicone-sessions.ts",
    "helicone-cost-report": "tsx apps/web/src/scripts/helicone-cost-report.ts",
    "worktree:create": "./tools/scripts/worktree-manager.sh create",
    "worktree:start": "./tools/scripts/worktree-manager.sh start",
    "worktree:list": "./tools/scripts/worktree-manager.sh list",
    "worktree:ports": "./tools/scripts/worktree-manager.sh ports",
    "worktree": "./tools/scripts/worktree-manager.sh",
    "migrations:status": "node tools/scripts/show-migrations.js",
    "check": "pnpm run typecheck && pnpm run lint",
    "precommit": "pnpm run check && pnpm run test:ci"
  },
  "devDependencies": {
    "@hono/node-server": "^1.17.1",
    "@types/glob": "^8.1.0",
    "@types/iarna__toml": "^2.0.5",
    "@types/jest": "^29.5.14",
    "@types/uuid": "^10.0.0",
    "hono": "^4.8.10",
    "knip": "^5.62.0",
    "prisma": "^6.13.0",
    "raw-loader": "^4.0.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.1",
    "turbo": "^2.3.3",
    "uuid": "^11.1.0"
  },
  "packageManager": "pnpm@9.15.1"
}