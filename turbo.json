{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "DATABASE_URL",
    "ANTHROPIC_API_KEY",
    "OPENAI_API_KEY",
    "NEXTAUTH_URL",
    "NEXTAUTH_SECRET",
    "HELICONE_API_KEY",
    "FIRECRAWL_KEY"
  ],
  "globalDependencies": [
    ".env",
    ".env.local",
    ".env.production",
    "tsconfig.json"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "@roast/db#gen"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^build", "prisma:generate"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "cache": false
    },
    "test:unit": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "test:integration": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "cache": false
    },
    "gen": {
      "cache": false,
      "outputs": ["generated/**"]
    },
    "db:push": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    }
  }
}